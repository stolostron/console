{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranchPatterns": [
    "main",
    "release-2.16",
    "release-2.15",
    "release-2.14",
    "release-2.13",
    "release-2.12",
    "release-2.11"
  ],
  "schedule": ["every weekend"],
  "timezone": "America/New_York",
  "lockFileMaintenance": {
    "enabled": false
  },
  "ignoreDeps": [
    "@monaco-editor/react",
    "@openshift-assisted/ui-lib",
    "@openshift-assisted/locales",
    "monaco-editor",
    "react-monaco-editor"
  ],
  "packageRules": [
    {
      "description": "Restrict npm updates to main branch only",
      "matchManagers": ["npm"],
      "matchBaseBranches": ["!/^main$/"],
      "enabled": false
    },
    {
      "description": "Only allow minor and patch updates for npm packages (disable major)",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Ignore all storybook packages",
      "matchPackageNames": ["storybook", "@storybook/**"],
      "enabled": false
    }
  ]
}
