{{! ========================================================== }}
{{! ========================================================== }}

---
apiVersion: cluster.open-cluster-management.io/v1
kind: ManagedCluster
metadata:
  labels:
{{#switch infrastructure}}
  {{#case 'AWS'}}
    cloud: Amazon
    region: {{{../../region}}}
  {{/case}}
  {{#case 'GCP'}}
    cloud: Google
    region: {{{../../region}}}
  {{/case}}
  {{#case 'Azure'}}
    cloud: Azure
    region: {{{../../region}}}
  {{/case}}
  {{#case 'BMC'}}
    cloud: Bare-Metal
  {{/case}}
  {{#case 'vSphere'}}
    cloud: vSphere
  {{/case}}
  {{#case 'OpenStack'}}
    cloud: OpenStack
  {{/case}}
{{/switch}}
    name: '{{{name}}}'
    vendor: {{{distribution}}}
{{#if clusterSet}}
    cluster.open-cluster-management.io/clusterSet: {{{clusterSet}}}
{{/if}}
    {{#each additional}}
    {{{key}}}: '{{{value}}}'
    {{/each}}
  name: '{{{name}}}'
spec:
  hubAcceptsClient: true


