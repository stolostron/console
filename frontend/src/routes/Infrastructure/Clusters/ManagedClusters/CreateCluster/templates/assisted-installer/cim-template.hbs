---
apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  annotations:
    agentBareMetal-agentSelector/autoSelect: "true"
    {{#if ai.cpuArchitecture}}
    agentBareMetal-cpuArchitecture: {{{ai.cpuArchitecture}}}
    {{/if}}
    {{#if reconcilePause}}
    hive.openshift.io/reconcile-pause: '{{{reconcilePause}}}'
    {{/if}}
  {{#if ai.managedClusterSet}}
  labels:
    "cluster.open-cluster-management.io/clusterset": '{{{ai.managedClusterSet}}}'
  {{/if}}
  name: '{{{ai.name}}}'
  namespace: '{{{ai.name}}}'
spec:
  baseDomain: {{{ai.baseDnsDomain}}}
  clusterInstallRef:
    group: extensions.hive.openshift.io
    kind: AgentClusterInstall
    name: '{{{ai.name}}}'
    version: v1beta1
  clusterName: '{{{ai.name}}}'
  platform:
    agentBareMetal:
      agentSelector: {}
  pullSecretRef:
    name: pullsecret-cluster-{{{ai.name}}}

---
apiVersion: extensions.hive.openshift.io/v1beta1
kind: AgentClusterInstall
metadata:
  name: '{{{ai.name}}}'
  namespace: '{{{ai.name}}}'
spec:
  clusterDeploymentRef:
    name: '{{{ai.name}}}'
  holdInstallation: true
  provisionRequirements:
    workerAgents: 0
{{#switch ai.highAvailabilityMode}}
  {{#case 'Full'}}
    controlPlaneAgents: 3
  {{/case}}

  {{#case 'None'}}
    controlPlaneAgents: 1
  {{/case}}
{{/switch}}
  imageSetRef:
    name: '{{{ai.openshiftVersion}}}'
  networking:
    networkType: '{{{ai.networkType}}}'
    clusterNetwork:
    - cidr: 10.128.0.0/14
      hostPrefix: 23
    serviceNetwork:
    - 172.30.0.0/16
{{#if ssh-publickey}}
  sshPublicKey: |-
  {{#each ssh-publickey}}
      {{{.}}}
  {{/each}}
{{else}}
  sshPublicKey: ''
{{/if}}

---
apiVersion: v1
kind: Secret
metadata:
  name: pullsecret-cluster-{{{ai.name}}}
  namespace: '{{{ai.name}}}'
data:
  '.dockerconfigjson': {{{ai.pullSecret}}}
type: kubernetes.io/dockerconfigjson

---
apiVersion: cluster.open-cluster-management.io/v1
kind: ManagedCluster
metadata:
  labels:
    cloud: BareMetal
    vendor: OpenShift
    name: '{{{ai.name}}}'
    {{#if ai.managedClusterSet}}
    cluster.open-cluster-management.io/clusterset: '{{{ai.managedClusterSet}}}'
    {{/if}}
    {{#each ai.additionalLabels}}
    {{{key}}}: '{{{value}}}'
    {{/each}}
  name: '{{{ai.name}}}'
spec:
  hubAcceptsClient: true

{{>clusterCurator}}

{{#if includeKlusterletAddonConfig}}
---
apiVersion: agent.open-cluster-management.io/v1
kind: KlusterletAddonConfig
metadata:
  name: '{{{ai.name}}}'
  namespace: '{{{ai.name}}}'
spec:
  clusterName: '{{{ai.name}}}'
  clusterNamespace: '{{{ai.name}}}'
  clusterLabels:
    cloud: BareMetal
    vendor: OpenShift
  applicationManager:
    enabled: true
  policyController:
    enabled: true
  searchCollector:
    enabled: true
  certPolicyController:
    enabled: true
{{/if}}
---
