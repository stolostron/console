[
    {
        "type": "ManagedCluster",
        "required": 1,
        "schema": {
            "type": "object",
            "properties": {
                "apiVersion": { "type": "string" },
                "kind": { "const": "ManagedCluster" },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "name": { "validateDNSName": true },
                        "labels": {
                            "type": "object",
                            "properties": {
                                "cloud": { "type": "string" },
                                "vendor": { "type": "string" },
                                "name": { "type": "string" }
                            },
                            "required": ["name", "cloud", "vendor"]
                        }
                    },
                    "required": ["name", "labels"]
                },
                "spec": {
                    "type": "object",
                    "properties": {
                        "hubAcceptsClient": { "type": "boolean" }
                    },
                    "required": ["hubAcceptsClient"]
                }
            },
            "required": ["apiVersion", "metadata", "spec"]
        }
    },
    {
        "type": "Secret",
        "schema": {
            "type": "object",
            "properties": {
                "apiVersion": { "type": "string" },
                "kind": { "type": "string", "const": "Secret" },
                "type": { "type": "string", "enum": ["Opaque"] },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "name": { "validateDNSName": true },
                        "namespace": { "validateDNSName": true }
                    },
                    "required": ["name", "namespace"]
                },
                "stringData": {
                    "type": "object",
                    "properties": {
                        "autoImportRetry": { "type": "string" },
                        "server": { "type": "string" }
                    },
                    "required": ["autoImportRetry"],
                    "oneOf": [{ "required": ["token", "server"] }, { "required": ["kubeconfig"] }]
                }
            },
            "required": ["apiVersion", "type", "kind", "metadata", "stringData"]
        }
    },
    {
        "type": "KlusterletAddonConfig",
        "required": 1,
        "schema": {
            "type": "object",
            "properties": {
                "apiVersion": { "type": "string" },
                "kind": { "const": "KlusterletAddonConfig" },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "name": { "validateDNSName": true },
                        "namespace": { "validateDNSName": true }
                    }
                },
                "spec": {
                    "type": "object",
                    "properties": {
                        "clusterName": { "validateDNSName": true },
                        "clusterNamespace": { "validateDNSName": true },
                        "clusterLabels": {
                            "type": "object",
                            "properties": {
                                "cloud": { "type": "string" },
                                "vendor": { "type": "string" }
                            },
                            "required": ["name", "cloud", "vendor"]
                        },
                        "applicationManager": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean" },
                                "argocdCluster": { "type": "boolean" }
                            },
                            "required": ["enabled"]
                        },
                        "policyController": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean" }
                            },
                            "required": ["enabled"]
                        },
                        "searchCollector": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean" }
                            },
                            "required": ["enabled"]
                        },
                        "certPolicyController": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean" }
                            },
                            "required": ["enabled"]
                        },
                        "iamPolicyController": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean" }
                            },
                            "required": ["enabled"]
                        }
                    },
                    "required": [
                        "clusterName",
                        "clusterNamespace",
                        "clusterLabels",
                        "applicationManager",
                        "policyController",
                        "searchCollector",
                        "certPolicyController",
                        "iamPolicyController"
                    ]
                },
                "version": { "type": "string" }
            },
            "required": ["apiVersion", "metadata"]
        }
    }
]
