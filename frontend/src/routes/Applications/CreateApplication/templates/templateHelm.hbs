{{! ========================================================== }}
{{! ==================Helm channel ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}
        repoURL: {{{helmURL}}}
        chart: {{{helmChartName}}}
        targetRevision: {{{helmPackageVersion}}}
      destination:
        server: '{{{curlyServer}}}'
        namespace: {{{destinationNS}}}
{{! ========================================================== }}
{{! ========================================================== }}
{{! ==================Sync policies ========================= }}
{{! ========================================================== }}
{{! ========================================================== }}      
      syncPolicy:
        automated:
        {{#if allowEmpty}}
          allowEmpty: true
        {{/if}}
        {{#if selfHeal}}
          selfHeal: true
        {{/if}}
        syncOptions:
          {{#if validate}}
            - Validate=true
          {{/if}}
          {{#if createNamespace}}
            - CreateNamespace=true
          {{/if}}
          {{#if applyOutOfSyncOnly}}
            - ApplyOutOfSyncOnly=true
          {{/if}}
          {{#if prunePropagationPolicy}}
            {{#if propagationPolicy}}
            - PrunePropagationPolicy={{{propagationPolicy}}}
            {{/if}}
          {{/if}}

{{#unless channelNamespace}}
{{#unless channelNamespaceExists}}
---
apiVersion: v1                      
kind: Namespace
metadata:
  name: {{{channelName}}}-ns
{{/unless}}
---
apiVersion: apps.open-cluster-management.io/v1
kind: Channel
metadata:
  name: {{{channelName}}}
  namespace: {{{channelName}}}-ns
  {{#if selfLinks}}
  selfLink: {{{selfLinks.Channel}}}
  {{/if}}
spec:
  type: HelmRepo
{{/unless}}
