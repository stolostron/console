{{! ========================================================== }}

  placement:
    placementRef:
      kind: Placement
{{#if selectedRuleName}}
      name: {{{selectedRuleName}}}
{{else}}
    {{#unless existingrule-checkbox}}       
      name: {{{@root.name}}}-placement-{{uniqueGroupID}}
    {{else}}
      name:
    {{/unless}}
    
{{/if}}       
{{#if timeWindow.mode}}
  timewindow:
    windowtype: {{{timeWindow.mode}}}
    location: {{{timeWindow.timezone}}}
    daysofweek: [{{{timeWindow.days}}}]
    {{#if timeWindow.showTimeSection}}
    hours:
      {{#each timeWindow.timeList}}
      {{#if validTime}}
      - start: "{{{start}}}"
        end: "{{{end}}}"
      {{/if}}
      {{/each}}
    {{/if}}
{{/if}}

{{#unless existingrule-checkbox}} 
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  labels:
    app: {{{@root.name}}}
  name: {{{@root.name}}}-placement-{{uniqueGroupID}}
  namespace: {{{@root.namespace}}}
  {{#if selfLinks}}
  selfLink: {{{selfLinks.PlacementRule}}}
  {{/if}}
{{#if clusterSelector.mode}}  
spec:
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            {{#each clusterSelector.clusterLabelsList}}
            {{#if validValue}}
            - key: '{{{labelName}}}'
              operator: In
              values: ['{{{labelValue}}}']
            {{/if}}
            {{/each}} 
  clusterSets:
    - default
{{else}}
  {{#if online-cluster-only-checkbox}}
spec:
  clusterConditions:
    - type: ManagedClusterConditionAvailable
      status: "True"
  {{/if}}
  {{#if local-cluster-checkbox}}
spec:
  clusterSelector:
    matchLabels:
      'local-cluster': 'true'
  {{/if}}
{{/if}}

---
apiVersion: cluster.open-cluster-management.io/v1beta2
kind: ManagedClusterSetBinding
metadata:
  namespace: {{{@root.namespace}}}
  name: default
spec:
  clusterSet: default
{{/unless}}