{{! ========================================================== }}

  placement:
    placementRef:
    {{#if isDeprecatedPR}}
      kind: PlacementRule
    {{else}}
      kind: Placement
    {{/if}}
{{#if selectedRuleName}}
      name: {{{selectedRuleName}}}
{{else}}
    {{#unless existingrule-checkbox}}       
      name: {{{@root.name}}}-placement-{{uniqueGroupID}}
    {{else}}
      name:
    {{/unless}}
    
{{/if}}       
{{#if timeWindow.mode}}
  timewindow:
    windowtype: {{{timeWindow.mode}}}
    location: {{{timeWindow.timezone}}}
    daysofweek: [{{{timeWindow.days}}}]
    {{#if timeWindow.showTimeSection}}
    hours:
      {{#each timeWindow.timeList}}
      {{#if validTime}}
      - start: "{{{start}}}"
        end: "{{{end}}}"
      {{/if}}
      {{/each}}
    {{/if}}
{{/if}}

{{#if isDeprecatedPR}}
---
{{{deprecated-rule}}}
{{else}}
{{#unless existingrule-checkbox}} 
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  labels:
    app: {{{@root.name}}}
  name: {{{@root.name}}}-placement-{{uniqueGroupID}}
  namespace: {{{@root.namespace}}}
  {{#if selfLinks}}
  selfLink: {{{selfLinks.PlacementRule}}}
  {{/if}}
{{#if clusterSelector.mode}}  
spec:
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            {{#each clusterSelector.clusterLabelsList}}
            {{#if validValue}}
            - key: '{{{labelName}}}'
              operator: '{{{operatorValue}}}'
              {{#if labelValue}}
              values: 
                {{#each labelValue}}
                - '{{{ this }}}'
                {{/each}}
              {{/if}}
            {{/if}}
            {{/each}} 
  clusterSets:
    {{#each clusterSelector.clusterSetsList}}
    - {{{clusterSetName}}}
    {{/each}}
{{else}}
  {{#if online-cluster-only-checkbox}}
spec:
  clusterConditions:
    - type: ManagedClusterConditionAvailable
      status: "True"
  {{/if}}
  {{#if local-cluster-checkbox}}
spec:
  clusterSelector:
    matchLabels:
      'local-cluster': 'true'
  {{/if}}
{{/if}}
{{#each clusterSelector.clusterSetsList}}
{{#unless existManagedClusterSetBinding}} 
---
apiVersion: cluster.open-cluster-management.io/v1beta2
kind: ManagedClusterSetBinding
metadata:
  namespace: {{{@root.namespace}}}
  name: {{{clusterSetName}}}
spec:
  clusterSet: {{{clusterSetName}}}
{{/unless}}  
{{/each}}
{{/unless}}  
{{/if}}