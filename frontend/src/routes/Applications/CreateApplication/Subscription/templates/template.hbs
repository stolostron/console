{{! ==================Application ============================ }}
{{! ========================================================== }}
{{! ========================================================== }}
{{#if userDefinedNamespace}}
apiVersion: v1                    
kind: Namespace
metadata:
  name: {{{namespace}}}                             
---
{{/if}}
apiVersion: app.k8s.io/v1beta1
kind: Application
metadata:
  name: {{{name}}} ##name
  namespace: {{{namespace}}} ##namespace
  {{#if selfLink}}
  selfLink: {{{selfLink}}}
  {{/if}}
spec:
  componentKinds:
  - group: apps.open-cluster-management.io
    kind: Subscription
  descriptor: {}
  selector:
    matchExpressions:
      - key: app
        operator: In
        values: 
          - {{{name}}}


