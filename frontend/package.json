{
    "name": "@open-cluster-management/console-frontend",
    "version": "0.0.1",
    "private": true,
    "homepage": "/multicloud/",
    "proxy": "https://localhost:4000",
    "scripts": {
        "start": "webpack serve --mode development",
        "build": "webpack --mode production",
        "watch": "echo",
        "test": "jest",
        "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "check": "prettier --check src",
        "check:fix": "prettier --write src",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u -t minor && yarn install && yarn audit fix && npm dedup && yarn test && yarn run lint:fix && yarn run lint && yarn run check:fix",
        "clean": "rm -rf coverage build"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@kubernetes/client-node": "^0.15.0",
        "@open-cluster-management/resources": "^1.0.0",
        "@open-cluster-management/ui-components": "^0.180.0",
        "@patternfly/react-core": "^4.135.5",
        "@patternfly/react-table": "^4.29.5",
        "@redhat-cloud-services/rule-components": "^3.2.1",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/get-value": "^3.0.2",
        "@types/jest": "^27.0.0",
        "@types/lodash": "^4.14.172",
        "@types/node": "^14.17.4",
        "@types/react": "^17.0.17",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.8",
        "babel-jest": "^27.0.6",
        "babel-loader": "^8.2.2",
        "browserify-fs": "^1.0.0",
        "buffer": "^6.0.3",
        "bundle-loader": "^0.5.6",
        "compression-webpack-plugin": "^8.0.1",
        "copy-webpack-plugin": "^9.0.1",
        "crypto-browserify": "^3.12.0",
        "css-loader": "^6.2.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-react": "^7.24.0",
        "file-loader": "^6.2.0",
        "handlebars": "^4.7.7",
        "handlebars-loader": "^1.7.1",
        "html-webpack-plugin": "^5.3.2",
        "i18next": "^20.3.2",
        "i18next-browser-languagedetector": "^6.1.2",
        "i18next-http-backend": "^1.2.6",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "jest-fetch-mock": "^3.0.3",
        "jest-raw-loader": "1.0.1",
        "jest-sonar-reporter": "^2.0.0",
        "jest-watch-typeahead": "^0.6.4",
        "json-loader": "^0.5.7",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "monaco-editor": "^0.25.2",
        "monaco-editor-webpack-plugin": "^4.0.0",
        "nock": "^13.1.1",
        "node-util": "^0.0.1",
        "path-browserify": "^1.0.1",
        "prettier": "^2.3.2",
        "process": "^0.11.10",
        "raw-loader": "^4.0.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "^11.11.1",
        "react-monaco-editor": "0.36.0",
        "react-router-dom": "^5.2.0",
        "recoil": "^0.3.1",
        "stream-browserify": "^3.0.0",
        "style-loader": "^3.2.1",
        "temptifly": "^0.4.6",
        "ts-jest": "^27.0.4",
        "ts-loader": "^9.2.5",
        "typescript": "^4.3.5",
        "v8-compile-cache": "^2.3.0",
        "webpack": "^5.50.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2",
        "whatwg-fetch": "^3.6.2",
        "yaml": "^1.10.2"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:jest/recommended"
        ],
        "plugins": [
            "react",
            "@typescript-eslint",
            "jest"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "rules": {
            "@typescript-eslint/no-non-null-assertion": "off",
            "react/react-in-jsx-scope": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off",
            "jest/expect-expect": "off",
            "@typescript-eslint/no-floating-promises": [
                "off",
                {
                    "ignoreVoid": true
                }
            ],
            "@typescript-eslint/no-misused-promises": [
                "error",
                {
                    "checksVoidReturn": false
                }
            ],
            "@typescript-eslint/no-non-null-asserted-optional-chain": "off",
            "jest/no-disabled-tests": "off",
            "no-async-promise-executor": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/no-empty-function": "off",
            "jest/no-identical-title": "off",
            "@typescript-eslint/ban-types": "off",
            "no-empty": "off",
            "no-constant-condition": "off",
            "jest/no-export": "off",
            "@typescript-eslint/no-extra-semi": "off"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
