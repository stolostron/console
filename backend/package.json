{
    "name": "backend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "ts-node-dev --no-notify --no-deps --respawn --transpile-only src/lib/main.ts | pino-zen -i time",
        "postinstall": "[ ! -d ./certs ] && npm run generate-certs || true",
        "generate-certs": "mkdir -p certs && openssl req -subj '/C=US' -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -keyout certs/tls.key -out certs/tls.crt",
        "build": "tsc --sourceMap false --declaration false",
        "tsc:noEmit": "tsc --noEmit",
        "clean": "rm -rf coverage build",
        "test": "concurrently --kill-others-on-fail npm:jest npm:eslint npm:prettier npm:tsc:noEmit -c green,blue,cyan,magenta",
        "jest": "jest",
        "eslint": "eslint src test --ext .ts --max-warnings=0",
        "eslint:fix": "eslint src test --ext .ts --fix",
        "prettier": "prettier --check src test",
        "prettier:fix": "prettier --write src test",
        "update": "npx npm-check-updates --doctor --upgrade && npm audit fix && npm dedup"
    },
    "dependencies": {
        "abort-controller": "^3.0.0",
        "dotenv": "^10.0.0",
        "find-my-way": "^5.0.0",
        "node-fetch": "^2.6.1",
        "pino": "^6.13.2",
        "proxy-agent": "^5.0.0",
        "raw-body": "^2.4.1"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/eslint": "^7.29.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.7",
        "@types/node-fetch": "^2.5.12",
        "@types/pino": "^6.3.11",
        "@types/prettier": "^2.4.2",
        "@types/raw-body": "^2.3.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^6.4.0",
        "eslint": "^7.32.0",
        "jest": "^27.x.x",
        "nock": "^13.2.1",
        "pino-zen": "^1.0.20",
        "prettier": "^2.4.1",
        "ts-jest": "^27.x.x",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.4.4"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "<rootDir>/test/jest-setup.ts"
        ],
        "watchPathIgnorePatterns": [
            "coverage"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "rules": {
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "@typescript-eslint/no-misused-promises": [
                "error",
                {
                    "checksVoidReturn": false
                }
            ]
        }
    }
}
