{
    "name": "@open-cluster-management/console-backend",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "npm run clean && tsc --sourceMap false --declaration false",
        "clean": "rm -rf coverage build",
        "test": "jest --verbose",
        "test:update": "LOG_LEVEL=NONE npm test -- -u",
        "lint": "eslint src test --ext .ts --max-warnings=0",
        "lint:fix": "eslint src test --ext .ts --fix",
        "check": "prettier --check **/*.ts **/*.json !coverage/** !build/** !**/package-lock.json",
        "check:fix": "prettier --write **/*.ts **/*.json !coverage/** !build/** !**/package-lock.json",
        "start": "source .env && PORT=4000 NODE_ENV=development LOG_LEVEL=DEBUG ts-node-dev --no-notify --no-deps --respawn --transpile-only src/main.ts",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check",
        "generate-certs": "mkdir -p certs && openssl req -subj '/C=US' -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -keyout certs/tls.key -out certs/tls.crt"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/eslint": "^7.2.6",
        "@types/eslint-config-prettier": "^6.11.0",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.x.x",
        "@types/prettier": "^2.1.6",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "axios": "^0.21.1",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.x.x",
        "nock": "^13.0.5",
        "prettier": "^2.2.1",
        "ts-jest": "^26.x.x",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "<rootDir>/test/jest-setup.ts"
        ],
        "watchPathIgnorePatterns": [
            "coverage"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "@typescript-eslint/no-misused-promises": [
                "error",
                {
                    "checksVoidReturn": false
                }
            ]
        }
    }
}
